<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/watchListFragment">

    <fragment
        android:id="@+id/watchListFragment"
        android:name="com.example.traders.watchlist.WatchListFragment"
        android:label="@string/fragment_watch_list_label"
        tools:layout="@layout/fragment_watch_list">
        <action
            android:id="@+id/action_watchListFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_watchListFragment_to_cryptoItem"
            app:destination="@id/cryptoItem" />
    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.traders.profile.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />

    <fragment
        android:id="@+id/cryptoItem"
        android:name="com.example.traders.watchlist.allCrypto.singleCryptoScreen.CryptoItem"
        android:label="CryptoItem" >
        <action
            android:id="@+id/action_cryptoItem_to_watchListFragment"
            app:destination="@id/watchListFragment"
            app:popUpTo="@id/watchListFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="symbol"
            app:argType="string" />
        <argument
            android:name="price"
            app:argType="float" />
        <argument
            android:name="priceChange"
            app:argType="float" />
    </fragment>

</navigation>
