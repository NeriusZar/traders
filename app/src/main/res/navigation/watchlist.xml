<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watchlist"
    app:startDestination="@id/watchListFragment">

    <fragment
        android:id="@+id/watchListFragment"
        android:name="com.example.traders.watchlist.WatchListFragment"
        android:label="@string/fragment_watch_list_label"
        tools:layout="@layout/fragment_watch_list">
        <action
            android:id="@+id/action_watchListFragment_to_cryptoItem"
            app:destination="@id/cryptoItemFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>

    <fragment
        android:id="@+id/cryptoItemFragment"
        android:name="com.example.traders.watchlist.allCrypto.singleCryptoScreen.CryptoItemFragment"
        android:label="CryptoItem" >
        <action
            android:id="@+id/action_cryptoItem_to_watchListFragment"
            app:destination="@id/watchListFragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"
            app:popUpTo="@id/watchListFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="symbol"
            app:argType="string" />
    </fragment>

</navigation>